    },
    {
      "type": "text",
      "id": "mobel_label",
      "label": "Link-Text für Möbel (optional)",
      "default": "Möbel"
    }
  ],
  "presets": [
    {
      "name": "Header - Startseite & Möbel",
      "settings": {
        "mobel_collection": "furniture",
