<button
  id="menuBtn"
  class="md:hidden justify-self-start p-2 -ml-2"
  aria-expanded="false"
  data-open-mega
  data-mm-open
  aria-controls="megaMenu"
>
  <span class="sr-only">Open menu</span>
  <svg width="28" height="20" viewBox="0 0 28 20" fill="none" xmlns="http://www.w3.org/2000/svg">
