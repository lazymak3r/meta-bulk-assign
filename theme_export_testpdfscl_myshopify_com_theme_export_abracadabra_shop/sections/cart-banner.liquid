<!-- Persistent Cart Banner -->
<div class="cart-banner" id="cart-banner" style="display: none;">
  <div class="cart-banner-content">
    <!-- Collapsed State -->
    <div class="cart-banner-collapsed" id="cart-banner-collapsed">
      <div class="cart-banner-info">
        <div class="cart-icon-banner">
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M16 11V7a4 4 0 00-8 0v4M5 9h14l-1 7a2 2 0 01-2 2H8a2 2 0 01-2-2L5 9z"/>
          </svg>

          <span class="cart-count" id="cart-banner-count">0</span>
        </div>
        <div class="cart-text">
          <span class="cart-total" id="cart-total">$0.00</span>
        </div>
      </div>
      <div class="cart-banner-actions">
        <button class="expand-btn" onclick="expandCartBanner()" title="Expand cart">
          <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12"/>
          </svg>
        </button>
        <a href="/cart" class="checkout-btn">
          <span>Checkout</span>
          <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>

    <!-- Expanded State -->
    <div class="cart-banner-expanded" id="cart-banner-expanded" style="display: none;">
      <div class="cart-banner-header">
        <button class="collapse-btn" onclick="collapseCartBanner()" title="Collapse cart">
          <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
      </div>
      <div class="cart-banner-items" id="cart-banner-items">
        <!-- Cart items will be populated here -->
      </div>
      <div class="cart-banner-footer">
        <div class="cart-total-row">
          <span class="total-label">Total:</span>
          <span class="total-amount" id="cart-total-expanded">$0.00</span>
        </div>
        <div class="cart-banner-buttons">
          <a href="/cart" class="view-cart-btn">View Cart</a>
          <a href="/checkout" class="checkout-btn-expanded">Checkout</a>
        </div>
      </div>
    </div>
  </div>
</div>
