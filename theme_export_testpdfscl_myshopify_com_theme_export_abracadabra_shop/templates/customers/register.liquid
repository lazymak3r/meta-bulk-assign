{{ 'register.css' | asset_url | stylesheet_tag }}

{% render 'breadcrumbs', current_title: 'customer.register_page.breadcrumb' | t %}

<div class="customer-register page-width">
  <main class="register-main">
    <div class="register-container">
      <h1 class="register-title">{{ 'customer.register_page.title' | t }}</h1>

      <div class="wk-card">
        {% form 'create_customer' %}
          {% if form.errors %}
            <div class="errors">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}

          <div class="field">
            <input
              type="text"
              name="customer[first_name]"
              id="first_name"
              required
              placeholder="Name"
              class="w-full h-[60px] mb-5 rounded-[12px] pl-4 pr-[140px] text-[14px] border border-black/10 bg-white placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-black/10"
              aria-label="Name"
            >
          </div>
          <div class="field">
            <input
              type="text"
              name="customer[last_name]"
              id="last_name"
              required
              placeholder="Nachname"
              class="w-full h-[60px] mb-5 rounded-[12px] pl-4 pr-[140px] text-[14px] border border-black/10 bg-white placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-black/10"
              aria-label="Nachname"
            >
          </div>

          <div class="field">
            <input
              type="email"
              name="customer[email]"
              id="email"
              required
              placeholder="Email"
              class="w-full h-[60px] mb-5 rounded-[12px] pl-4 pr-[140px] text-[14px] bg-white placeholder:text-gray-500 focus:outline-none"
              aria-label="Email"
              aria-describedby="register-email-error"
            >
            <div id="register-email-error" class="register-error" role="alert" aria-live="polite">
              <svg width="16" height="15" viewBox="0 0 16 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M7.99992 4.83398V7.50065M7.99992 10.1673H8.00659M14.6666 7.50065C14.6666 11.1826 11.6818 14.1673 7.99992 14.1673C4.31802 14.1673 1.33325 11.1826 1.33325 7.50065C1.33325 3.81875 4.31802 0.833984 7.99992 0.833984C11.6818 0.833984 14.6666 3.81875 14.6666 7.50065Z" stroke="#D23126" stroke-width="1.33333" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Valid Email address is required</span>
            </div>
          </div>

          <div class="field">
            <input
              type="password"
              name="customer[password]"
              id="password"
              required
              placeholder="Passwort"
              class="w-full h-[60px] mb-5 rounded-[12px] pl-4 pr-[140px] text-[14px] border border-black/10 bg-white placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-black/10"
              aria-label="Passwort"
            >
          </div>
          <div class="flex items-center gap-4">
            <button
              type="submit"
              class=" w-[140px] h-[50px] px-6 rounded-full bg-primary text-white text-[14px] hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary/50"
            >
              Registrieren
            </button>

            <p>Hast du schon ein Konto? <a class="hover:underline" href="{{ routes.account_login_url }}">Login</a></p>
          </div>
        {% endform %}
      </div>
    </div>
  </main>
</div>
